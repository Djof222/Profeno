<odoo>
    <data>

        <record id="pipeline_mapping_view_form" model="ir.ui.view">
            <field name="name">pipeline.mapping.view.form</field>
            <field name="model">crm.pipeline.mapping</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="name"/>
                        <field name="connection_id"/>
                        <field name="channel"/>
                        <field name="remote_id"/>
                        <field name="local_id"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="pipeline_mapping_view_tree" model="ir.ui.view">
            <field name="name">pipeline.mapping.view.tree</field>
            <field name="model">crm.pipeline.mapping</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="connection_id"/>
                    <field name="channel"/>
                    <field name="remote_id"/>
                    <field name="local_id"/>
                </tree>
            </field>
        </record>

        <record id="action_crm_pipeline_mapping" model="ir.actions.act_window">
            <field name="name">Pipeline Mappings</field>
            <field name="res_model">crm.pipeline.mapping</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="pipeline_mapping_view_tree"/>
        </record>

        <menuitem id="root_vtiger_mapping" name="Vtiger"
                parent="odoo_multi_channel_crm.menu_mapping" sequence="100"/>

            <menuitem id="menu_crm_pipeline_mapping" name="Pipelines"
                    action="action_crm_pipeline_mapping" parent="root_vtiger_mapping" 
                    sequence="5"/>

    </data>
</odoo>