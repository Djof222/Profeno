<odoo>
    <data>

        <record id="pipeline_view_form" model="ir.ui.view">
            <field name="name">pipeline.view.form</field>
            <field name="model">crm.pipeline</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="name"/>
                        <field name="stage_ids" widget="many2many_tags"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="pipeline_view_tree" model="ir.ui.view">
            <field name="name">pipeline.view.tree</field>
            <field name="model">crm.pipeline</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="stage_ids" widget="many2many_tags"/>
                </tree>
            </field>
        </record>

        <record id="action_crm_pipeline" model="ir.actions.act_window">
            <field name="name">Pipelines</field>
            <field name="res_model">crm.pipeline</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="pipeline_view_tree"/>
        </record>

        <menuitem id="menu_crm_pipeline" name="Pipelines"
                action="action_crm_pipeline" parent="crm.menu_crm_config_lead" 
                sequence="0"/>

    </data>
</odoo>