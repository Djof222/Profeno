<odoo>
	<data>
		<record id="tree_product_mapping" model="ir.ui.view">
			<field name="name">product.template.mapping.tree</field>
			<field name="model">product.template.mapping</field>
			<field name="arch" type="xml">
				<tree decoration-danger="is_modified">
					<field name="is_modified" column_invisible="True"/>
					<field name="connection_id"/>
					<field name="channel"/>
					<field name="remote_id"/>
					<field name="local_id"/>
					<field name="imported"/>
				</tree>
			</field>
		</record>

		<record id="form_product_mapping" model="ir.ui.view">
			<field name="name">product.template.mapping.form</field>
			<field name="model">product.template.mapping</field>
			<field name="arch" type="xml">
				<form archive="false">
					<sheet>
						<group>
							<group>
								<field name="is_modified" invisible="True"/>
								<field name="connection_id"/>
								<field name="channel"/>
								<field name="imported"/>
								<field name="remote_id"/>
								<field name="local_id"/>
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record id="action_product_mapping" model="ir.actions.act_window">
			<field name="name">Product Mappings</field>
			<field name="res_model">product.template.mapping</field>
			<field name="view_mode">tree,form</field>
			<field name="view_ids" eval="[
					(5, 0, 0),
					(0, 0, {'view_mode': 'tree'}),
					(0, 0, {'view_mode': 'form', 'view_id': ref('form_product_mapping')})
				]"
			/>
		</record>

		<menuitem
			id="menu_product_mapping"
			name="Product"
			action="action_product_mapping"
			parent="menu_mapping"
			sequence="40"
		/>
	</data>
</odoo>
