<odoo>
	<data>
		<record id="tree_channel_log" model="ir.ui.view">
			<field name="name">channel.log.tree</field>
			<field name="model">channel.log</field>
			<field name="arch" type="xml">
				<tree
					decoration-primary="operation=='import'"
					decoration-success="operation=='export'"
					decoration-warning="operation=='update'"
				>
					<field name="connection_id"/>
					<field name="operation"/>
					<field name="name"/>
					<field name="user_id"/>
					<field name="create_date" string="On"/>
				</tree>
			</field>
		</record>

		<record id="form_channel_log" model="ir.ui.view">
			<field name="name">channel log form</field>
			<field name="model">channel.log</field>
			<field name="arch" type="xml">
				<form archive="false">
					<sheet>
						<group>
							<field name="connection_id"/>
							<field name="user_id"/>
							<field name="operation"/>
							<field name="name"/>
							<field
								name="feed_ids"
								invisible="operation == ['export','update']
							">
								<tree
									decoration-muted="state=='done'"
									decoration-danger="state=='error'"
								>
									<field name="type"/>
									<field name="name"/>
									<field name="remote_id"/>
									<field name="state"/>
								</tree>
							</field>
							<field
								name="line_ids"
								invisible="operation == 'import'"
							>
								<tree
									decoration-success="success==True"
									decoration-danger="success==False"
								>
									<field name="local_id"/>
									<field name="remote_id"/>
									<field name="success"/>
									<field name="error"/>
								</tree>
							</field>
							<field name="create_date" string="On"/>
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record id="action_channel_log" model="ir.actions.act_window">
			<field name="name">Logs</field>
			<field name="res_model">channel.log</field>
			<field name="view_mode">tree,form</field>
		</record>

		<menuitem
			id="menu_log"
			name="Log"
			action="action_channel_log"
			parent="root_menu_odoo_multi_channel_crm"
			groups="base.group_no_one"
			sequence="40"
		/>
	</data>
</odoo>
