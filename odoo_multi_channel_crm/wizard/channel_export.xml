<odoo>
	<data>
		<record id="form_channel_export_wizard" model="ir.ui.view">
			<field name="name">channel.export.form</field>
			<field name="model">channel.export</field>
			<field name="arch" type="xml">
				<form>
					<sheet>
						<group col="4">
							<field name="connection_id"/>
							<field name="channel"/>
							<field name="operation"/>
							<field name="object_type"/>
							<field name="local_ids"/>
						</group>
					</sheet>
					<footer>
						<button
							string="Export"
							type="object"
							name="export_button"
							class="oe_highlight btn btn-success"
						/>
						<button
							string="Cancel"
							class="btn btn-danger"
							name="cancel"
							special="cancel"
						/>
					</footer>
				</form>
			</field>
		</record>

		<record id="action_export_partner" model="ir.actions.act_window">
			<field name="name">Export to CRM</field>
			<field name="res_model">channel.export</field>
			<field name="binding_model_id" ref="model_res_partner"/>
			<field name="binding_view_types">list,form</field>
			<field name="view_mode">form</field>
			<field name="target">new</field>
		</record>

		<record id="action_export_deal" model="ir.actions.act_window">
			<field name="name">Export to CRM</field>
			<field name="res_model">channel.export</field>
			<field name="binding_model_id" ref="model_crm_lead"/>
			<field name="binding_view_types">list,form</field>
			<field name="view_mode">form</field>
			<field name="target">new</field>
		</record>

		<record id="action_export_product" model="ir.actions.act_window">
			<field name="name">Export to CRM</field>
			<field name="res_model">channel.export</field>
			<field name="binding_model_id" ref="model_product_template"/>
			<field name="binding_view_types">list,form</field>
			<field name="view_mode">form</field>
			<field name="target">new</field>
		</record>
	</data>
</odoo>
