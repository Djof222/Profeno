<templates xml:space="preserve">
	<div t-name="template_connection_dashboard">
		<header class="container">
			<div class="row my-2">
				<div class="col-12">
					<t t-call="template_connection"/>
				</div>
			</div>
		</header>
		<main class="container">
			<div class="row my-2" style="min-height:400px">
				<div class="col-md-8 col-sm-12 px-2 pl-md-4">
					<t t-call="template_connection_recent_leads_chart"/>
				</div>
				<div class="col-md-4 col-sm-12 px-2 pr-md-4">
					<t t-call="template_connection_total_leads_chart"/>
				</div>
			</div>
		</main>
		<footer class="container bg-white">
			<div class="row my-2">
				<div class="col px-2">
					<t t-call="template_connection_top_user_chart"/>
				</div>
			</div>
		</footer>
	</div>

	<div t-name="template_connection" class="card rounded border-0">
		<div class="row card-body d-flex align-items-center">
			<div class="col-auto">
				<img
					class="img-thumbnail flex-auto"
					t-att-src="widget.connection.image"
					style="height:75px"
				/>
			</div>
			<div class="col-auto">
				<h4 class="text-dark" t-esc="widget.connection.name"/>
			</div>
			<div class="col-auto">
				<span class="text-muted text-capitalize" t-esc="widget.connection.channel"/>
			</div>
			<div class="col-auto">
				<t t-if="widget.connection.connected">
					<span class="badge badge-pill badge-primary">Connected</span>
				</t>
				<t t-else="">
					<span class="badge badge-pill badge-dark">Disconnected</span>
				</t>
			</div>
			<div class="col-auto ml-auto">
				<t t-if="widget.connection.connected">
					<button
						class="_action btn_import btn rounded-sm text-white m-2 px-4 py-2"
						data-action="import"
						t-att-data-connection="widget.connection.id"
					>
						<i class="fa fa-arrow-circle-down fa-lg"/> Import
					</button>
				</t>
				<button
					class="_action btn_export btn rounded-sm text-white m-2 px-4 py-2"
					data-action="open"
					t-att-data-connection="widget.connection.id"
				>
					<i class="fa fa-cog fa-lg"/> Configure
				</button>
			</div>
		</div>
	</div>

	<div t-name="template_connection_recent_leads_chart" class="card rounded border-0 h-100">
		<div class="card-header font-weight-bold bg-transparent py-3">
			<div class="row justify-content-between">
				<div class="col-auto">
					Recent Leads
				</div>
				<div class="col-auto">
					<select class="custom-select w-auto" id="recent_lead_period" t-on-change="render_recent_lead_chart" >
						<option value="daily" selected="true">Daily</option>
						<option value="monthly">Monthly</option>
					</select>
				</div>
			</div>
		</div>
		<div class="card-body">
			<canvas id="connection_recent_lead_chart"/>
		</div>
	</div>

	<div t-name="template_connection_total_leads_chart" class="card rounded border-0 h-100">
		<div class="card-header font-weight-bold bg-transparent py-3">
			Total Leads
		</div>
		<div class="card-body">
			<canvas id="connection_total_lead_chart"/>
		</div>
	</div>

	<div t-name="template_connection_top_user_chart" class="card rounded border-0 h-100">
		<div class="card-header font-weight-bold bg-transparent py-3">
			Total Salespersons
		</div>
		<div class="card-body">
			<canvas id="top_user_chart"/>
		</div>
	</div>
</templates>
