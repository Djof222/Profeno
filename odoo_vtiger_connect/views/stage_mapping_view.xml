<odoo>
    <data>

        <record id="stage_mapping_view_form" model="ir.ui.view">
            <field name="name">stage.mapping.view.form</field>
            <field name="model">channel.stage.mapping</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="name"/>
                        <field name="connection_id"/>
                        <field name="remote_id"/>
                        <field name="local_id"/>
                        <field name="lost"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="stage_mapping_view_tree" model="ir.ui.view">
            <field name="name">stage.mapping.view.tree</field>
            <field name="model">channel.stage.mapping</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="connection_id"/>
                    <field name="remote_id"/>
                    <field name="local_id"/>
                    <field name="lost"/>
                </tree>
            </field>
        </record>

        <record id="action_channel_stage_mapping" model="ir.actions.act_window">
            <field name="name">Stages</field>
            <field name="res_model">channel.stage.mapping</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="stage_mapping_view_tree"/>
        </record>

        <menuitem id="menu_stage_mapping" name="Stages"
                action="action_channel_stage_mapping" parent="root_vtiger_mapping" 
                sequence="10"/>

    </data>
</odoo>