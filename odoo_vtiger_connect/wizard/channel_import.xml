<odoo>
	<data>

		<record id="form_channel_import_wizard_vtiger" model="ir.ui.view">
			<field name="name">channel.import.form.vtiger</field>
			<field name="model">channel.import</field>
            <field name="inherit_id" ref="odoo_multi_channel_crm.form_channel_import_wizard"/>
			<field name="arch" type="xml">
				<xpath expr="//group[@name='filter_type']" position="inside">
                    <field name="vt_filter"
                        invisible="not channel == 'vtiger' "
                        required="channel == 'vtiger' "
                    />
                </xpath>
                <xpath expr="//group[@name='filter']" position="inside">
                    <field name="vtiger_id"
                        invisible="vt_filter != 'id' " 
                        required = "vt_filter == 'id' "
                    />
                </xpath>
			</field>
		</record>

    </data>
</odoo>
