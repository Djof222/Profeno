<odoo>

    <record id="crm_case_form_view_oppor" model="ir.ui.view">
        <field name="name">crm.lead.oppor.inherited.crm</field>
        <field name="model">crm.lead</field>
        <field name="priority">20</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group" position="after">
                <group>
                    <group>
                        <field name="ref_projet"/>
                        <field name="token_jopps"/>
                        <field name="date_creation"/>
                        <field name="jopps_existant"/>
                    </group>
                    <group>
                        <field name="adresse_chantier"/>
                        <field name="soumission_ferme"/>
                        <field name="statut_covid"/>
                        <field name="type_offre"/>
                    </group>
                    <group>
                        <field name="phase_vente"/>
                        <field name="no_jorpa"/>
                        <field name="date_modification"/>
                        <field name="emplacement_cle"/>
                    </group>
                </group>
            </xpath>

            <xpath expr="//form[1]/sheet[1]/notebook[1]" position="inside">
                <page string="Commercial" name="studio_page_EZAD7">
                    <group>
                        <!--                        <group>-->
                        <!--&lt;!&ndash;                            <field name="ref_projet"/>&ndash;&gt;-->
                        <!--                            <field name="token_jopps"/>-->
                        <!--                            <field name="date_creation"/>-->
                        <!--                        </group>-->
                        <!--                        <group>-->
                        <!--                            <field name="adresse_chantier"/>-->
                        <!--                            <field name="soumission_ferme"/>-->
                        <!--                            <field name="statut_covid"/>-->
                        <!--                            <field name="type_offre"/>-->
                        <!--                        </group>-->
                        <group>
                            <field name="phase_offre"/>
                            <field name="no_offre_jopps"/>
                            <field name="date_signature_probable"/>
                            <field name="date_signature"/>
                            <field name="date_dernier_contact"/>
                            <field name="date_echeance"/>
                            <field name="obligation_contrat" widget="many2many_checkboxes"
                                   options="{'no_open': True, 'no_create': True}"/>
                            <field name="promo"/>
                            <field name="date_prochain_contact"/>
                            <field name="moins_value_plus_value"/>
                            <field name="semaine_livraison_estimee"/>
                        </group>
                        <group>

                            <field name="montant_offre_jopps"/>
                            <field name="type_contrat"/>
                            <field name="type_facturation"/>
                            <field name="conditions_chantiers"/>
                            <field name="tva"/>
                            <field name="garantie_decennale"/>
                            <field name="etat_avancement"/>
                            <field name="escompte"/>
                            <field name="conditions_paiement"/>
                        </group>


                    </group>
                </page>
                <page string="DÃ©tail chantier" name="studio_page_oEOco">
                    <group>
                        <group>
                            <field name="type_chantier"/>
                            <field name="finitions_exterieur_ids" options="{'no_open': True, 'no_create': True}"/>
                            <field name="acces_chantier"/>
                            <field name="dossier_de_pose"/>
                            <field name="attachment_filename" invisible="1"/>
                            <field name="attachment" filename="attachment_filename"
                                   attrs="{'invisible': [('dossier_de_pose', '=', False)]}" widget="binary"/>
                            <field name="mesure_par"/>
                            <field name="mesureur"/>
                            <field name="aide_pose_heure_fin"/>


                        </group>
                        <group>
                            <field name="type_batiment"/>
                            <field name="remarques_chantier"/>
                            <field name="remarques_mesurage"/>
                            <field name="mesure_le"/>
                            <field name="aide_pose_heure_debut"/>
                        </group>
                    </group>
                </page>
                <page string="Fournitures" name="studio_page_Z4Dbr">
                    <group>
                        <group>
                            <field name="sale_order_template_id" invisible="1"/>
                            <field name="products" widget="many2many_checkboxes" string="Produits"/>
                        </group>
<!--                        <group>-->
<!--                        </group>-->
                    </group>
                </page>
            </xpath>


        </field>
    </record>


</odoo>