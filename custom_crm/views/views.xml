            <xpath expr="//group" position="after">
                <group>
                <group>
                    <field name="ref_projet"/>
                    <field name="token_jopps"/>
                    <field name="date_creation"/>
                </group>
                <group>
                    <field name="adresse_chantier"/>
                    <field name="soumission_ferme"/>
                    <field name="statut_covid"/>
                    <field name="type_offre"/>
                </group>
                <group>
                    <field name="phase_vente"/>
                    <field name="no_jorpa"/>
                    <field name="date_modification"/>
                    <field name="emplacement_cle"/>
                </group>
                </group>
            </xpath>


        </field>
    </record>


</odoo>